                                    def ecrImage = docker.build("${ECR_REGISTRY}/${IMAGE_NAME}-ranking:${PROD_TAG}")
                                    ecrImage.push()
                                    ecrImage.push('latest')
                                }
                            }
                        }
                    }
                }
                
                stage('Data Ingestor Image') {
                    steps {
