# Trip Currency Service Environment Variables
# 로컬 개발 환경용 설정

# 환경 설정
ENVIRONMENT=local
SERVICE_NAME=currency-service

# 데이터베이스 설정
DB_HOST=localhost
DB_PORT=3306
DB_NAME=currency_db
DB_USER=currency_user
DB_PASSWORD=password

# Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379

# MongoDB 설정 (Ranking Service용)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=admin
MONGODB_PASSWORD=password
MONGODB_DATABASE=currency_db

# Kafka 설정
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# 서비스 포트 설정
CURRENCY_SERVICE_PORT=8000
RANKING_SERVICE_PORT=8002
HISTORY_SERVICE_PORT=8003

# 로깅 설정
LOG_LEVEL=INFO
LOG_FORMAT=text

# CORS 설정
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# 외부 API 설정
# ExchangeRate-API는 API 키가 필요하지 않음

# AWS 설정 (로컬에서는 사용하지 않음)
# AWS_REGION=ap-northeast-2
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
